{
    "fields": {
       "username": {
            "id": 1,
            "label": "用户名",
            "maxlength": 10,
            "minlength": 3,
            "style": {
                "width": "200px"
            },
            "required": true,
            "requiredMsg": "用户名一定要填哦！",
            "placeholder": "请输入用户名"
        },
        "password":{
            "id": 2,
            "type": "input:password",
            "label": "密码",
            "hide": "username!='yqfang'|| write!='hello'"
        },
        "write": {
            "id": 3,
            "type": "textarea",
            "label": "备注"
        },
        "datefor":{
            "id": 4,
            "type": "input:date",
            "label": "日期"
        },
        "timefor":{
            "id": 5,
            "type": "input:time",
            "label": "时间"
        },
        "datetime":{
            "id": 6,
            "type": "input:datetime",
            "label": "具体时间"
        },
        "country":{
            "id": 7,
            "type": "select",
            "label": "国家",
            "required": true,
            "candidates": [
                {
                    "name": "美国",
                    "value": "American"
                },
                {
                    "name": "英国",
                    "value": "English"
                }
            ]
        },
        "menu":{
            "id": 9,
            "type": "maya-config-menu",
            "label": "点菜",
            "model": {
                "btnName": "编辑"
            }
        },
        "satisfied":{
            "id": 10,
            "type": "input:checkbox",
            "label": "是否满意"
        },

       "sex": {
            "id": 11,
            "label": "性别",
            "type": "input:radio",
            "hide": true,
            "candidates": [
                {
                    "value": "male",
                    "label": "男性"
                },
                {
                    "value": "female",
                    "label": "女性"
                }

            ],
            "required": true
        },
		"color":{
            "id": 12,
            "label": "颜色",
            "style": {
                "width": "100%"
            },
			"type": "maya-ui-select",
            "disabled": false,
            "model": [
                {"id": 1, "name": "red"},
				{"id": 2, "name": "black"},
				{"id": 3, "name": "yello"},
				{"id": 4, "name": "white"},
				{"id": 5, "name": "black"},
                {"id": 6, "name": "red"},
				{"id": 7, "name": "black"},
				{"id": 8, "name": "yello"},
				{"id": 9, "name": "white"},
				{"id": 10, "name": "black"}

            ]
		},
        "employNum": {
            "id": 14,
            "label": "员工编号",
            "type": "maya-http-select"
        },
		"group":{
            "id": 15,
			"type": "maya-config-group",
            "style": {
                "textAlign": "right"
            },
            "model": {
                "btn1": "提交",
                "btn2": "收藏",
                "btn3": "清空"
            }
		}
    },
    "option": {
        "formClass": "form-horizontal",
        "labelClass": "col-xs-2",
        "inputClass": "col-xs-7"
    }

}
