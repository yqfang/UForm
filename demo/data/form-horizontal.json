{
    "fields": {
       "username": {
            "id": 1,
            "label": "用户名",
            "maxlength": 10,
            "minlength": 3,
            "style": {
                "width": "200px"
            },
            "customs": {
                "truncate-to": 9,
                "capitalize": ""
            },
            "disabled": "write=='hello'",
            "required": true,
            "requiredMsg": "用户名一定要填哦！",
            "placeholder": "请输入用户名",
            "maxwrite": 6,
            "bind": {
                "field": "write",
                "url": "test.json",
                "type": "get",
                "params": {
                   "username" : "{{username}}"
                },
                "data": {

                },
                "bind": null
            }
        },
        "password":{
            "id": 2,
            "type": "up-password",
            "label": "密码",
            "hide": "username!='YQFANG'|| write!='hello'"
        },
        "linkedA": {
            "id": 2.01,
            "label": "联动inputA",
            "placeholder": "请输入",
            "customs": {
                "maya-link-a-to-b": ""
            }
        },
        "linkedB": {
            "id": 2.02,
            "label": "联动inputB",
            "placeholder": "请输入"
        },
        "roles": {
            "id": 2.1,
            "type": "maya-check-list",
            "label": "角色",
            "style": {
                "margin": "6px 10px 0 0"
            },
            "candidates": [
                {
                    "name": "管理员",
                    "value": "admin"
                },
                {
                    "name": "顾客",
                    "value": "customer"
                },
                {
                    "name": "用户",
                    "value": "user"
                },
                {
                    "name": "客人",
                    "value": "guest"
                }
            ]
        },
        "write": {
            "id": 3,
            "type": "up-textarea",
            "label": "备注"
        },
        "datefor":{
            "id": 4,
            "type": "up-date",
            "label": "日期"
        },
        "timefor":{
            "id": 5,
            "type": "up-time",
            "label": "时间"
        },
        "datetime":{
            "id": 6,
            "type": "up-datetime",
            "label": "具体时间"
        },
        "country":{
            "id": 7,
            "type": "up-select",
            "label": "国家",
            "required": true,
            "candidates": [
                {
                    "name": "美国",
                    "value": "American"
                },
                {
                    "name": "英国",
                    "value": "English"
                }
            ]
        },
        "menu":{
            "id": 9,
            "type": "maya-config-menu",
            "label": "点菜",
            "model": {
                "btnName": "编辑"
            }
        },
        "satisfied":{
            "id": 10,
            "type": "up-checkbox",
            "label": "是否满意"
        },

       "sex": {
            "id": 11,
            "label": "性别",
            "type": "up-radio",
            "hide": true,
            "candidates": [
                {
                    "value": "male",
                    "label": "男性"
                },
                {
                    "value": "female",
                    "label": "女性"
                }

            ],
            "required": true
        },
		"color":{
            "id": 12,
            "label": "颜色",
            "style": {
                "width": "100%"
            },
			"type": "maya-ui-select",
            "disabled": false,
            "model": [
                {"id": 1, "name": "red"},
				{"id": 2, "name": "black"},
				{"id": 3, "name": "yello"},
				{"id": 4, "name": "white"},
				{"id": 5, "name": "black"},
                {"id": 6, "name": "red"},
				{"id": 7, "name": "black"},
				{"id": 8, "name": "yello"},
				{"id": 9, "name": "white"},
				{"id": 10, "name": "black"}

            ]
		},
        "employNum": {
            "id": 13,
            "label": "员工编号",
            "type": "maya-http-select",
            "style": {
                "width": "80%"
            },
            "wait": 1000
        },
        "schools": {
            "id": 14,
            "label": "学校",
            "type": "maya-checkbox",
            "style": {
                "width": "80%"
            },
            "inline": true,
            "lists":[
                {
                    "desc": "中国科技大学",
                    "field": "USTC",
                    "checked": true
                },
                {
                    "desc": "北京邮电大学",
                    "field": "BUPT"
                }
            ]
        },
		"group":{
            "id": 15,
			"type": "maya-config-group",
            "style": {
                "textAlign": "right"
            },
            "model": {
                "btn1": "提交",
                "btn2": "收藏",
                "btn3": "清空"
            }
		},
         "techs": {
            "id": 16,
            "label": "专业",
            "type": "maya-checkbox",
            "style": {
                "width": "80%"
            },
            "inline": true,
            "lists":[
                {
                    "desc": "通信工程",
                    "field": "commu"
                },
                {
                    "desc": "电子工程",
                    "field": "ele"
                },
                {
                    "desc": "计算机技术",
                    "field": "computer"
                }
            ]
        }
    },
    "option": {
        "formClass": "form-horizontal",
        "labelClass": "col-xs-2",
        "inputClass": "col-xs-7"
    }

}
